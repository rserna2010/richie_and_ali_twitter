
<div class="container">
 

 <div class="page-header">
  <h1>Heads of twitter</h1>
</div>

 <p><%  @politician.each do |senator| %></p>
<div class="container">
  <div class="row">
    <div class="span2">
      <img src="<%= senator.avatar %>" height="128" width="128"  alt="" class="img-rounded">
    </div>
    <div class="span4">
      <blockquote>
        <p><%= senator.name %> </p>
        <small><cite title="Source Title">    State: <%= senator.state%>   <i class="icon-map-marker"></i></cite></small>
      </blockquote>
      <p>
        <i class=" icon-heart"></i>  Index: <%= senator.average_score.to_f.round(2) %> <br>

        <i class="icon-gift"></i> Total followers: <%= senator.total_followers%>  <br>
         <i class="icon-globe"></i> <a href="http://www.twitter.com/<%=senator.handle%>"> <%=senator.handle  %> </a><br>
        <i class=>
      </p>
    </div>


  </div>
</div> 
</div>
 <% end %>
